{ "version":        "0.2.0"
, "configurations":
  [ { "name": "help"
    , "type": "debugpy"
    , "request": "launch"
    , "program": "${workspaceFolder}/driver.py"
    , "console": "integratedTerminal"
    , "args":
      [ "--help"]
    }
  , { "name": "command-line-input"
    , "type": "debugpy"
    , "request": "launch"
    , "program": "${workspaceFolder}/driver.py"
    , "console": "integratedTerminal"
    , "args":
      [ "--file_path"
      , "design-patterns.pdf"
      , "--pdf_start_page"
      , "62"
      , "--pdf_end_page"
      , "152"
      ]
    }
  ]
}